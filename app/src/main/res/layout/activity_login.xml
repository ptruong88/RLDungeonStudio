<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_screen" >

    <RelativeLayout
        android:id="@+id/layoutLoginText"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/login_box"
        android:padding="0dp"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/textViewIntro1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewIntro2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="Fearless Adventurer"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textViewIntro2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTextLogin"
            android:layout_centerHorizontal="true"
            android:text="Enter Thy Name"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/editTextLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonLogin"
            android:layout_alignLeft="@+id/textViewIntro2"
            android:layout_alignRight="@+id/textViewIntro2"
            android:layout_centerHorizontal="true" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/buttonLogin"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Login" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutLoginChoose"
        android:layout_width="200dp"
        android:layout_height="220dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/login_box"
        android:padding="0dp"
        android:visibility="invisible" >

        <Button
            android:id="@+id/buttonData1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonData2"
            android:layout_margin="0dp"
            android:gravity="left"
            android:text="Data 1\nName:\nGold:" />

        <Button
            android:id="@+id/buttonData2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonPlay"
            android:layout_margin="0dp"
            android:gravity="left"
            android:text="Data 2\nName:\nGold:" />

        <Button
            android:id="@+id/buttonPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="0dp"
            android:layout_toLeftOf="@+id/buttonDelete"
            android:text="Play" />

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="0dp"
            android:text="Delete" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutLoginNewLoad"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/login_box"
        android:padding="0dp"
        android:visibility="visible" >

        <Button
            android:id="@+id/buttonNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:gravity="center"
            android:text="New game" />

        <Button
            android:id="@+id/buttonLoad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonNew"
            android:layout_margin="0dp"
            android:gravity="center"
            android:text="Load game" />
    </RelativeLayout>

</RelativeLayout>